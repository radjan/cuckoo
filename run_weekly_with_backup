PROJECT_ROOT=/home/rad/repo/cuckoo

cd ${PROJECT_ROOT}

${PROJECT_ROOT}/run_weekly
RET=$?
if [ $RET != 0 ]; then
    exit $RET
fi

# backup 5 weeks
for i in {4..0}
do
    backup_file=backup/data_week.${i}.tar.gz
    if [ -f $backup_file ]; then
        mv $backup_file backup/data_week.$[$i+1].tar.gz
    fi
done
tar -zcf backup/data_week.0.tar.gz data
